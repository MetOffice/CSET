{% if PLOT_SPATIAL_PRESSURE_LEVEL_MODEL_FIELD_CASE_AGGREGATION_VALIDITY_TIME|default(False) %}
{% for field in PRESSURE_LEVEL_MODEL_FIELDS %}
{% for model in models %}
{% for plevel in PRESSURE_LEVELS %}
[runtime]
    [[generic_plevel_spatial_plot_sequence_case_aggregation_by_validity_time_m{{model["id"]}}_{{sanitise_task_name(field)}}_lv{{sanitise_task_name(plevel)}}]]
    inherit = PROCESS_CASE_AGGREGATION
        [[[directives]]]
        --mem=5000
        [[[environment]]]
        CSET_RECIPE_NAME = "generic_plevel_spatial_plot_sequence_case_aggregation_mean_validity_time.yaml"
        CSET_ADDOPTS = """
            --VARNAME='{{field}}'
            --PLEVEL='{{plevel}}'
            --MODEL_NAME='{{model["name"]}}'
        """
        MODEL_IDENTIFIERS = {{model["id"]}}
{% endfor %}
{% endfor %}
{% endfor %}
{% endif %}
