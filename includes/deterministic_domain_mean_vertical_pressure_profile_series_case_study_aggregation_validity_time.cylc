{% if DOMAIN_MEAN_VERTICAL_PROFILE_SERIES_CASE_AGGREGATION_VALIDITY_TIME|default(False) %}
{% for field in PRESSURE_LEVEL_MODEL_FIELDS %}
{% for model in models %}
[runtime]
    [[generic_plevel_domain_mean_vertical_profile_series_case_aggregation_by_validity_time_m{{model["id"]}}_{{sanitise_task_name(field)}}]]
    inherit = PROCESS_CASE_AGGREGATION
        [[[directives]]]
        --mem=5000
        [[[environment]]]
        CSET_RECIPE_NAME = "generic_plevel_domain_mean_vertical_profile_series_case_aggregation_validity_time.yaml"
        CSET_ADDOPTS = """
            --VARNAME='{{field}}'
            --MODEL_NAME='{{model["name"]}}'
        """
        MODEL_IDENTIFIERS = {{model["id"]}}
{% endfor %}
{% endfor %}
{% endif %}
